# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
OBSERVABILITY.SERVICE_NAME="tasker"
OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
OBSERVABILITY.LOGGING.LEVEL="debug"
OBSERVABILITY.LOGGING.FORMAT="console"
OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"